# App Review Summarization Tool - Environment Variables
# Copy this file to .env and fill in the required values

# AppBot API credentials
APPBOT_API_USERNAME=your_appbot_username
APPBOT_API_PASSWORD=your_appbot_password

# Default app ID to analyze (can be overridden with --app-id)
APPBOT_APP_ID=your_appbot_app_id

# OpenAI API key for GPT-4o and o1 models
OPENAI_API_KEY=your_openai_api_key

# Optional configuration (these have defaults but can be overridden)
# REVIEW_DAYS=30                 # Number of days to look back
# REVIEW_LIMIT=100               # Maximum number of reviews to process
# MIN_RATING=1                   # Minimum rating (1-5 stars)
# MAX_RATING=5                   # Maximum rating (1-5 stars)
# EXTRACTIVE_SENTENCES=5         # Number of sentences in extractive summary
# VERBOSE=false                  # Enable verbose output
# OUTPUT_FORMAT=text             # Options: text, json, markdown